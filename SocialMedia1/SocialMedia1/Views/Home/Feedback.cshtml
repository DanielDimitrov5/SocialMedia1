@model SocialMedia1.Models.Common.FeedbackInputModel


<p></p>
<div class="row">

    <div class="col-md-5">
        <h2>Contact Us</h2>
        <p>
            Please send your message below. We will get back to you at the earliest!
        </p>
        <form asp-action="Feedback">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" value="@User.Identity.Name" /> @*Email*@
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" rows="6" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-info btn-md btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }
