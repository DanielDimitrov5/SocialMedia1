@model IEnumerable<SocialMedia1.Models.JoinGroupRequestViewModel>

<head>
    <link rel="stylesheet" href="/css/listOfProfilesStyle.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="people-nearby">


                    @foreach (var joinRequest in Model)
                    {
                        <div class="nearby-user" onclick="window.location='/UserProfiles/Profile/@joinRequest.UserId';">
                            <div class="row">
                                <div class="col-md-2 col-sm-2">
                                    <img src="@joinRequest.ImageUrl" alt="user" class="profile-photo-lg">
                                </div>
                                <div class="col-md-7 col-sm-7">
                                    <h5><a href="/UserProfiles/Profile/@joinRequest.UserId" class="profile-link">@joinRequest.Nickname</a></h5>
                                    <p>@joinRequest.Name</p>
                                    <p class="text-muted">@joinRequest.Bio</p>
                                </div>
                                <div class="col-md-3 col-sm-3 btn-group">
                                    <div class="col-md-11">
                                        <a href="/Groups/ApproveJoinRequest?requesterId=@joinRequest.UserId&groupId=@joinRequest.GroupId" class="btn btn-success btn-pill">Approve <i class="fa-regular fa-circle-check"></i></a>

                                    </div>
                                    <div class="col-md-15">
                                        <a href="/Groups/DeleteJoinRequest?requesterId=@joinRequest.UserId&groupId=@joinRequest.GroupId" class="btn btn-danger btn-pill"><i class="fa-regular fa-trash-can"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/4123d5e637.js" crossorigin="anonymous"></script>

</body>
