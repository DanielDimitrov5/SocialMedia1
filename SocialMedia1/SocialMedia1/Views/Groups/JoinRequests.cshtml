@model IEnumerable<SocialMedia1.Models.JoinGroupRequestViewModel>

@{
    ViewData["Title"] = "JoinRequests";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover table-stripted">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="window.location='/UserProfiles/Profile/@item.UserId';">
                <td>
                    @Html.DisplayFor(modelItem => item.Nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="/Groups/ApproveJoinRequest?requesterId=@item.UserId&groupId=@item.GroupId" class="btn-success btn">Approve</a>
                    <a href="/Groups/DeleteJoinRequest?requesterId=@item.UserId&groupId=@item.GroupId" class="btn-danger btn">Delete</a>
                </td>
                <td>
                </td>
            </tr>
        }
    </tbody>
</table>
