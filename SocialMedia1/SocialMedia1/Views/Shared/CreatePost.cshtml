@model SocialMedia1.Models.Posts.CreatePostViewModel

@{
    ViewData["Title"] = "CreatePost";
}

<br /> 

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Posts" asp-action="CreatePost" class="col-md-6 offset-md-3 ">
            <div class="container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline row justify-content-center">
                <textarea asp-for="Content" class="form-control" rows="4" placeholder="What's new?"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-info btn-md btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
