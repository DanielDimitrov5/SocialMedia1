@using Microsoft.AspNetCore.Identity
@using SocialMedia1.Services
@using System.Security.Claims
@inject SignInManager<IdentityUser> SignInManager
@model SocialMedia1.Models.ProfileViewModel
@inject UserManager<IdentityUser> userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
</head>
<body class="profile">
    <div class="container">
        <div class="info">
            <div class="row">
                <div class="col-12 col-md-4 text-center">
                    <img src="/img/lorde.png" alt="Raised circle image" class="img-fluid rounded-circle shadow-lg" style="width: 180px;">
                </div>
                <div class="col-12 col-md-8 d-flex flex-column align-items-center align-items-lg-start">
                    <div class="d-flex flex-row align-items-start mt-3 mt-lg-0">
                        <div class="name">
                            <h2 class="mb-0">@Model.Nickname</h2>
                        </div>
                        <a href="/UserProfiles/EditUserProfile/" class="btn btn-info btn-pill btn-sm ml-3 mt-1">Edit</a>
                    </div>
                    <div class="stats d-flex flex-row align-items-center align-items-lg-start text-center text-lg-left">
                        <div class="posts ml-2 ml-lg-0"><p class="lead"><b>@Model.Posts.Count</b> posts</p></div>
                        <a href="/UserProfiles/Followers/@Model.Id"><div class="posts"><p class="lead"><b>@Model.FollowersCount</b> followers</p></div></a>
                        <a href="/UserProfiles/Following/@Model.Id"><div class="posts"><p class="lead"><b>@Model.FollowingCount</b> following</p></div></a>
                    </div>
                    <p class="lead mb-0 mt-2"><b>@Model.Name</b></p>
                    <p class="lead text-center text-lg-left">@Model.Bio</p>
                </div>
            </div>
        </div>
        <div class="navigation d-flex justify-content-center">
            <ul class="nav nav-info nav-tabs mt-3 d-flex flex-column flex-md-row">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#photos">
                        <i class="fas fa-th"></i> Photos
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#saved">
                        <i class="far fa-bookmark"></i> Saved
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tagged">
                        <i class="far fa-id-badge"></i> Tagged
                    </a>
                </li>
            </ul>
        </div>
        @foreach (var item in Model.Posts.OrderByDescending(x => x.CreatedOn))
        {
            <div class="container">

                <div class="row">
                    <div class="col-sm-6 offset-sm-3">
                        <div class="post-block">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex mb-3">
                                    <div class="mr-2">
                                        <a href="#!" class="text-dark"><img src="/img/lorde.png" alt="User" class="author-img"></a>
                                    </div>
                                    <div>
                                        <h5 class="mb-0"><a href="#!" class="text-dark">@item.Author</a></h5>
                                        <p class="mb-0 text-muted">@item.CreatedOn</p>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    <i class="fa fa-ellipsis-v" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"></i>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item" data-toggle="modal" data-target="#exampleModal">Delete</a></li>           @*!!!!!*@
                                    </ul>
                                </div>
                            </div>
                            <div class="post-block__content mb-2">
                                <p>@item.Content</p>
                                @*<img src="img/food1.jpg" alt="Content img">*@
                            </div>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <div class="d-flex">
                                        <a href="#!" class="text-danger mr-2"><span><i class="fa fa-heart"></i></span></a>
                                    </div>
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Delete post</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this post?
                        </div>
                        <div class="modal-footer">
                            <a href="/Posts/Delete/@item.Id" class="btn btn-danger">Delete</a>
                            <button type="button" class="btn btn-secondary">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</body>
</html>